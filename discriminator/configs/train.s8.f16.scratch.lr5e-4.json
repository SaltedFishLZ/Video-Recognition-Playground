{
    "train_transforms": [
        {
            "package": "transforms",
            "name": "CenterSegment",
            "argv": {
                "size": 16
            }
        },
        {
            "name": "MultiScaleCrop",
            "argv": {
                "output_size": [224, 224],
                "scales": [1, 0.875, 0.75, 0.66]
            }
        },
        {
            "package": "torchstream.transforms",
            "name": "ToTensor"
        },
        {
            "package": "torchstream.transforms",
            "name": "Normalize" ,
            "argv": {
                "mean": [0.485, 0.456, 0.406],
                "std": [0.229, 0.224, 0.225]
            }
        }
    ],

    "train_dataset": {
        "package": "datasets",
        "name": "FrameQualityDataset",
        "argv": {
            "trace_root": "../kfs/mc-traces/s8.f16.train",
            "train": true
        }
    },

    "val_transforms": [
        {
            "package": "transforms",
            "name": "CenterSegment",
            "argv": {
                "size": 16
            }
        },
        {
            "name": "Resize",
            "argv": {
                "size": 256
            }
        },
        {
            "name": "CenterCrop",
            "argv": {
                "size": [224, 224]
            }
        },
        {
            "package": "torchstream.transforms",
            "name": "ToTensor"  
        },
        {
            "package": "torchstream.transforms",
            "name": "Normalize" ,
            "argv": {
                "mean": [0.485, 0.456, 0.406],
                "std": [0.229, 0.224, 0.225]
            }
        }
    ],

    "val_dataset": {
        "package": "datasets",
        "name": "FrameQualityDataset",
        "argv": {
            "trace_root": "../kfs/mc-traces/s8.f16.train",
            "train": true
        }
    },

    "train_loader":{
        "batch_size": 32,
        "num_workers": 32,
        "shuffle": true,
        "pin_memory": true,
        "drop_last": false
    },

    "val_loader":{
        "batch_size": 32,
        "num_workers": 32,
        "shuffle": false,
        "pin_memory": true,
        "drop_last": false
    },

    "model": {
        "package": "models",
        "name": "FrameQualityDiscriminator",
        "argv": {
            "input_size": [16, 224, 224]
        }
    },

    "criterion": {
        "name": "CrossEntropyLoss"
    },

    "optimizer": {
        "name": "SGD",
        "argv": {
            "params": "model_specified",
            "lr": 0.0005,
            "momentum": 0.9
        }
    },

    "lr_scheduler": {
        "name": "StepLR",
        "params": "model_specified",
        "argv": {
            "step_size": 20
        }
    },

    "train": {
        "epochs": 100,
        "backup": {
            "dir_path": "checkpoints/discriminator",
            "pth_name": "discriminator.s8.f16.scratch.lr5e-4.e100"
        },
        "resume": {
            "dir_path": "checkpoints/discriminator",
            "pth_name": "discriminator.s8.f16.scratch.lr5e-4.e100"
        }
    }

}
